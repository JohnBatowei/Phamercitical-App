              </tr>
            </thead>
            <tfoot>
              <tr>
                <th>S/N</th>
                <th>DRUG ID</th>
                <th>PRODUCT NAME</th>
                <th>QUANTITY SOLD</th>
                <th>SOLD PRICE</th>
                <th>DATE</th>
                <th>Actions</th>
              </tr>
            </tfoot>
            <tbody>
              <% if(productDrugs.length > 0){ %> <% productDrugs.forEach((item,index)=>{ %>
              <tr>
                <td><%= index %></td>
                <td><%= item.drugid %></td>
                <td><%= item.productname%></td>
                <td><img src="/assets/pill.svg" alt="naira" id="naira"> <%= item.productquantity%></td>
                <td><img src="/assets/naira.svg" alt="naira" id="naira"><%= item.sellingprice%></td>
                <td><%= item.soldedate%></td>
                 <td><a href=""> <img src="/assets/eye.svg" alt="view" id="svg"></a></td>
