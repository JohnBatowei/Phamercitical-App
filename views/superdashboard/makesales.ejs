    <div class="card mb-3" id="stock">
      <div class="card-header" id="admin-table-head">
        <i class="fas fa-table"></i>
        Daily Sales
      </div>
      <div class="card-body">
        <div class="table-responsive">
          <table
            class="table table-bordered"
            id="dataTable"
            width="100%"
            cellspacing="0"
          >
            <thead>
              <tr>
                <th>S/N</th>
                <th>DRUG ID</th>
                <th>PRODUCT NAME</th>
                <th>QUANTITY SOLD</th>
                <th>SOLD PRICE</th>
                <th>DATE</th>
