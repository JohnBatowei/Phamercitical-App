<head>
  <style>
    .user2{
      background-color: rgb(9, 58, 83);
    }
    .mmdd label{
      padding: 8PX 12PX 4PX 5PX;
    }
    .mmdd{
      /* border: 1px solid red; */
      background-color: rgb(2, 47, 71);
      margin-right: -6em;
      display: flex;
      align-items: center;
    }
  </style>
</head>
<div class="container">
    <% if(errorMessage.length > 0){ %>
    <div id="errorMessage"><%= errorMessage %></div>
    <% } %> <% if(successMessage.length > 0){ %>
    <div id="successMessage"><%= successMessage %></div>
    <% } %>
  
    <div class="container-fluid">
      <h4 class="make-sales mmdd" id="retail">
        <span> Total Expenses : </span>
        <label >NGN <%= totalExpense.toLocaleString() %></label>
      </h4>
    </div>
  
    <section class="container-fluid">
      <h3>Add Expenses</h3>
      <form action="/midcontrol/expenses/<%= userid %>" method="POST" class="form-group">
        <div class="main-container">
          <div class="addstock">
            <div class="userName" id="form-box">
              <label for="">title</label>
              <input type="text" name="title" id="userName" required />
            </div>
        
            <div class="email" id="form-box">
              <label for="">Enter Amount</label>
              <input type="number" name="amount" id="email" required />
            </div>
          </div>
        </div>
        <button>Save</button>
      </form>
  
      <!-- DataTables Example -->
      <div class="card mb-3" id="stock">
        <div class="card-header" id="admin-table-head">
          <i class="fas fa-table"></i>
          ALL EXPENSES TABLE
        </div>
        <div class="card-body">
          <div class="table-responsive">
            <table
              class="table table-bordered"
              id="dataTable"
              width="100%"
              cellspacing="0"
            >
              <thead>
                <tr>
                  <th>S/N</th>
                  <th>TITLE</th>
                  <th>DATE</th>
                  <th>AMOUNT</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tfoot>
                <tr>
                  <th>S/N</th>
                  <th>TITLE</th>
                  <th>DATE</th>
                  <th>AMOUNT</th>
                  <th>Actions</th>
                </tr>
              </tfoot>
              <tbody>
                <% if(users.length > 0){ %> <% users.forEach((item,index)=>{ %>
                <tr>
                  <td><%= index+1 %></td>
                  <td><%= item.title%></td>
                  <td><%= item.createdAt.toDateString()  %></td>
                  <td>NGN <%= parseInt(item.amount).toLocaleString() %></td>
                  <td class="action"><a href="">
                     <img src="/assets/edit.svg" alt="view" id="svg">
                    </a>
                  </td>
                </tr>
                <% }) %> <% }else{ %>
                <p>No user created</p>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
        <!-- <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div> -->
      </div>
    </section>
  </div>
  